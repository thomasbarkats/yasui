{
  "format": 1,
  "branchFormat": 1,
  "types": [
    {
      "value": "fix",
      "description": "Issue(s) fixing"
    },
    {
      "value": "feat",
      "description": "New feature(s)"
    },
    {
      "value": "core",
      "description": "Change(s) on the application core"
    },
    {
      "value": "test",
      "description": "Change(s) related to tests"
    },
    {
      "value": "config",
      "description": "Project configuration"
    },
    {
      "value": "doc",
      "description": "Documentation / comment(s)"
    }
  ],
  "minLength": 8,
  "maxLength": 80,
  "changeVersion": "ignore",
  "showAllVersionTypes": false,
  "ai": {
    "enabled": true,
    "provider": "anthropic",
    "model": "claude-haiku-4-5",
    "envPath": ".env",
    "envKeyName": "ANTHROPIC_API_KEY",
    "largeDiffTokenThreshold": 12000
  }
}
