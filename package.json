{
  "name": "yasui",
  "version": "4.1.0",
  "description": "Lightweight multi-runtime framework for REST and web APIs",
  "license": "AGPL-3.0-or-later",
  "author": "Thomas BARKATS",
  "keywords": [
    "srvx",
    "multi-runtime",
    "framework",
    "lightweight",
    "minimalist",
    "API",
    "REST",
    "typescript",
    "decorators",
    "dependency-injection",
    "middleware",
    "web-standards",
    "nodejs",
    "deno",
    "bun"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thomasbarkats/yasui.git"
  },
  "homepage": "https://yasui.app",
  "bugs": {
    "url": "https://github.com/thomasbarkats/yasui/issues"
  },
  "type": "module",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js"
    }
  },
  "files": [
    "lib/**/*",
    "!lib/example/**/*"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "example": "npm run build && node lib/example/app.js",
    "preinstall": "rm -f package-lock.json && sh scripts/only-allow-pnpm.sh",
    "build": "sh scripts/build.sh",
    "lint": "eslint . --ext .ts --fix",
    "prepublishOnly": "pnpm run build && pnpm run lint",
    "preversion": "pnpm run lint",
    "precommit": "pnpm run lint",
    "commit": "pnpm run lint && format-commit",
    "branch": "format-commit --branch",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "kleur": "^4.1.5",
    "radix3": "^1.1.2",
    "reflect-metadata": "^0.2.2",
    "srvx": "^0.9.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "format-commit": "^0.4.0",
    "globals": "^16.4.0",
    "rollup-plugin-dts": "^6.2.3",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "vue": "^3.5.22"
  }
}
