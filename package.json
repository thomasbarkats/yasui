{
  "name": "yasui",
  "version": "3.0.0",
  "description": "Lightweight Express-based framework for REST and web APIs",
  "license": "AGPL-3.0-or-later",
  "author": "Thomas BARKATS",
  "keywords": [
    "express",
    "framework",
    "lightweight",
    "minimalist",
    "API",
    "REST",
    "typescript",
    "decorators",
    "dependency-injection",
    "middleware",
    "nodejs"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thomasbarkats/yasui.git"
  },
  "homepage": "https://yasui.app",
  "bugs": {
    "url": "https://github.com/thomasbarkats/yasui/issues"
  },
  "type": "module",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js"
    }
  },
  "files": [
    "lib/**/*",
    "!lib/example/**/*"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "example": "npm run build && node lib/example/app.js",
    "preinstall": "rm -f package-lock.json && sh only-allow-pnpm.sh",
    "build": "rm -rf lib && tsc",
    "lint": "eslint . --ext .ts --fix",
    "prepublishOnly": "pnpm run build && pnpm run lint",
    "preversion": "pnpm run lint",
    "precommit": "pnpm run lint",
    "commit": "pnpm run lint && format-commit",
    "branch": "format-commit --branch",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:translate": "node scripts/translate-docs.cjs",
    "docs:retranslate": "node scripts/translate-docs.cjs --force"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "express": "^5.1.0",
    "kleur": "^4.1.5",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.62.0",
    "@eslint/js": "^9.35.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.4.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "format-commit": "^0.4.0",
    "globals": "^16.4.0",
    "swagger-ui-express": "^5.0.1",
    "typescript": "^5.9.2",
    "vitepress": "^1.6.4",
    "vue": "^3.5.21"
  }
}
