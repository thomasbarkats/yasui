{
  "name": "yasui",
  "version": "2.0.0",
  "description": "Lightweight Express-based framework for REST and web APIs",
  "license": "AGPL-3.0-or-later",
  "author": "Thomas BARKATS",
  "keywords": [
    "express",
    "framework",
    "lightweight",
    "minimalist",
    "API",
    "REST",
    "typescript",
    "decorators",
    "dependency-injection",
    "middleware",
    "nodejs"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thomasbarkats/yasui.git"
  },
  "homepage": "https://github.com/thomasbarkats/yasui#readme",
  "bugs": {
    "url": "https://github.com/thomasbarkats/yasui/issues"
  },
  "main": "./lib/index.js",
  "typings": "./@types/index.d.ts",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "example": "nodemon",
    "build": "tsc && npm run types-build",
    "types-build": "cd src/types/ && tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .ts --fix",
    "prepublishOnly": "npm run build && npm run lint",
    "preversion": "npm run lint",
    "precommit": "npm run lint",
    "commit": "npm run lint && format-commit"
  },
  "files": [
    "lib/**/*",
    "!lib/examples/**/*",
    "@types/**/*",
    "!@types/enums.d.ts",
    "!@types/openapi.d.ts"
  ],
  "dependencies": {
    "express": "^5.1.0",
    "kleur": "^4.1.5",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.21",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "format-commit": "^0.3.1",
    "globals": "^16.2.0",
    "nodemon": "^3.1.10",
    "swagger-ui-express": "^5.0.1",
    "typescript": "^5.8.3"
  }
}
